{
    "name": "hexlet/code",
    "description": "A set of five console games, built on the principle of popular mobile brain training apps",
    "license": "MIT",
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/Engine.php",
            "src/Games/Even.php",
            "src/Games/Calc.php",
            "src/Games/Gcd.php",
            "src/Games/Progression.php",
            "src/Games/Prime.php"
        ]
    },
    "bin": [
        "bin/brain-games",
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-gcd",
        "bin/brain-progression",
        "bin/brain-prime"
    ],
    "scripts": {
        "phpcs": "phpcs"
    },
    "require": {
        "wp-cli/php-cli-tools": "^0.11.11"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5"
    }
}
